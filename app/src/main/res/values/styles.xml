<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- TextView -->
    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_accent</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:paddingStart">@dimen/paddingDefault</item>
        <item name="android:paddingEnd">@dimen/paddingDefault</item>
    </style>
</resources>